CC=gcc
CFLAGS=足DLINUX 足ansi 足Wall 足D_GNU_SOURCE # g
CPPFLAGS=
BIN=stat
ODIR=build
all:	$(ODIR)/$(BIN)
$(ODIR):
	mkdir $(ODIR)
$(ODIR)/$(BIN):	$(ODIR)/$(BIN).o
	$(CC) -o $(ODIR)/$(BIN) $(ODIR)/$(BIN).o
$(ODIR)/$(BIN).o:	$(BIN).c $(ODIR)
	$(CC) -std=c99 -c -o $(ODIR)/$(BIN).o $(BIN).c
clean:	
	rm -fr $(ODIR)/
